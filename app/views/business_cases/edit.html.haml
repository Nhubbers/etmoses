%h2= "Business case for #{@testing_ground.name}"

%table.table.table-bordered.finance-table
  %thead
    %tr
      %th
      - @business_case.stakeholders.each do |stakeholder|
        %th= stakeholder.titleize
      %th Total incoming

  %tfoot
    %tr
      %td Total outgoing
      - @business_case.stakeholders.each do |total_cell|
        %td.total
      %td.subtotal

  %tbody
    - @business_case.rows.each do |row|
      %tr
        - row.each_pair do |column_header, row_values|
          %td
            %strong= column_header.titleize
          - row_values.each do |row_value|
            %td.row_value
              - if row_value && row_value.tariff
                %span{data: { value: row_value.tariff } }
                  = number_to_currency(row_value.tariff, unit: 'â‚¬')
          %td.incoming_total

    %tr
      %td Freeform
      - @business_case.rows.each do |row|
        %td.row_value
          %input.free-form.form-control{value: ''}

%input.submit.btn.btn-primary{type: 'submit', value: 'Update'}
