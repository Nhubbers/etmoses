%ul
  %li== Key: #{ @price_curve.key }
  %li== Curve file name: #{ @price_curve.curve_file_name }

.profile-graph.line-chart{ data: { url: price_curve_path(@price_curve, format: :json), curve_type: 'price' } }

.commit
  = link_to('Download', @price_curve.curve.url, class: 'btn')
  %span.or or
  = link_to_if(policy(@price_curve).edit?, 'Edit', edit_price_curve_path(@price_curve))
  = link_to_if(policy(@price_curve).destroy?, 'Delete', price_curve_path(@price_curve), method: 'delete', data: { confirm: 'Are you sure you want to delete this profile?' })

